<% if @article.errors.any? %>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content%>
  <%= f.text_area :content%>
  <%= f.submit %>
<% end %>
